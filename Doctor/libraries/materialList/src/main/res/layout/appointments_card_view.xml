<?xml version="1.0" encoding="utf-8"?>
<com.dexafree.materialList.card.CardLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        style="@style/Material_Card_View"
        android:layout_width="350dp"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/headline_16dp"/>



            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:padding="25dp"
                android:layout_marginBottom="5dp">

                <Button android:id="@+id/A_app_date"
                    style="@style/Material_Action"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:background="#EC407A"
                    />
                <Button android:id="@+id/A_app_time"
                    style="@style/Material_Action"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:background="#EC407A"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:padding="25dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <Button
                    android:id="@+id/A_cancel_app"
                    style="@style/Material_Action"
                    android:background="@drawable/ic_cancel_black_24dp"
                    android:layout_marginRight="25dp"/>
                <include layout="@layout/vertical_divider"/>
                <Button
                    android:id="@+id/A_info"
                    style="@style/Material_Action"
                    android:background="@drawable/ic_info_black_24dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    />
                <include layout="@layout/vertical_divider"/>
                <Button android:id="@+id/A_medicines"
                    style="@style/Material_Action"
                    android:background="@drawable/ic_capsule"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.dexafree.materialList.card.CardLayout>