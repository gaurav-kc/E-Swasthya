<?xml version="1.0" encoding="utf-8"?>
<com.dexafree.materialList.card.CardLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        style="@style/Material_Card_View"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative"
            >

            <include layout="@layout/headline_16dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleX="1.5"
                android:scaleY="1.5"
                />
        </RelativeLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:padding="25dp"
                android:layout_marginBottom="5dp">

                <Button android:id="@+id/left_text_button"
                    style="@style/Material_Action"
                    android:background="@drawable/ic_access_time_black_24dp"
                    />
                <include layout="@layout/vertical_divider"/>
                <Button android:id="@+id/right_text_button"
                    style="@style/Material_Action"
                    android:background="@drawable/ic_spoon_icon_png"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</com.dexafree.materialList.card.CardLayout>